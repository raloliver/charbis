<div class="panel panel-default">
    <div class="painel-heading well-lg">
        All Users
    </div>
    <div class="panel-body">

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Nickname</th>
                        <th>Password</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{ this.name }}</td>
                        <td>{{ this.email }}</td>
                        <td>{{ this.slug }}</td>
                        <td>{{ this.password }}</td>
                        <td class="btn-group">
                            <a href="/users/{{ this._id }}" class="btn btn-info" href="#" role="button">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="POST" action="/user/{{ this._id }}?_method=DELETE" class="pull-right" role="form">
                                <button type="submit" class="btn btn-danger well-sm">
                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>